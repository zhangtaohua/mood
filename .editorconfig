; https://editorconfig.org/

root = true

[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
trim_trailing_whitespace = true
indent_style=space
indent_size=2
max_line_length = 120

[*.gohtml]
; 设定文件编码
charset = utf-8
; 移除文件尾部多余的空格
trim_trailing_whitespace = true
; 使用空格来做缩进
indent_style = space
; 缩进长度为两个空格
indent_size = 2

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
